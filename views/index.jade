extends layout

block content
  if view == 'loading'
    // loading from index.jade
    include login
  else if view == 'login'
    // login from index.jade
    include login
  else if view == 'registration'
    // registration from index.jade
    include login
  else if view == 'home'
    // home from index.jade
    include classes
  else if view == 'class'
    // class from index.jade
    include class-threads-all
  else if view == 'class-thread'
    // class-thread from index.jade
    include class-threads-single

